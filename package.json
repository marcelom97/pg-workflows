{
  "name": "pg-workflows",
  "description": "A workflow engine built on PostgreSQL with pg-boss",
  "version": "0.1.0",
  "type": "module",
  "files": [
    "dist"
  ],
  "module": "./dist/index.js",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "bunup",
    "dev": "bunup --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest watch",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "workflow",
    "postgresql",
    "pg-boss",
    "workflow-engine",
    "orchestration"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ksuid": "^3.0.0",
    "lodash": "^4.17.21",
    "pg": "^8.13.1",
    "pg-boss": ">=10.0.0 <11.0.0",
    "pg-connection-string": "^2.7.0",
    "typescript": "^5.9.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/lodash": "^4.17.13",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.11.10",
    "bunup": "^0.16.11",
    "vitest": "4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
